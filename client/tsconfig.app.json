{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "baseUrl": ".",
    "paths": {
      "@styles/*": ["src/base/styles/*"],

      "@component": ["src/base/components"],
      "@context": ["src/manager/context"],
      "@fetch": ["src/base/fetch"],
      "@guard": ["src/base/guards"],
      "@nullValue": ["src/base/values/nullValues"],
      "@prop": ["src/base/types/props"],
      "@redux": ["src/manager/redux"],
      "@secret": ["src/base/secret"],
      "@shareType": ["src/base/types/shareTypes"],
      "@shareValue": ["src/base/values/shareValues"],
      "@socketType": ["src/base/types/socketTypes"],
      "@type": ["src/base/types/types"],
      "@util": ["src/base/utils"],
      "@value": ["src/base/values/values"]
    }
  },
  "include": ["src"]
}
