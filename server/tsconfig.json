{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": false,
    "incremental": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "outDir": "./dist",

    "paths": {
      "@commons/*": ["src/common/*"],
      "@dtos/*": ["src/common/types/dto/*"],
      "@guards/*": ["src/common/guards/*"],
      "@httpDataTypes/*": ["src/common/types/httpDataTypes/*"],
      "@modules/*": ["src/modules/*"],
      "@values/*": ["src/common/values/*"],
      "@ports/*": ["src/modules/database/ports/*"],
      "@shareTypes/*": ["src/common/types/shareTypes/*"],
      "@shareValues/*": ["src/common/values/*"],
      "@socketTypes/*": ["src/common/types/socketTypes/*"],
      "@secrets/*": ["src/common/secret/*"],
      "@srcs/*": ["src/*"],
      "@tests/*": ["test/*"],
      "@testCommon": ["test/_common/*"],
      "@testValues": ["test/_common/testValues/*"],
      "@utils/*": ["src/common/utils/*"],

      "@common": ["src/common"],
      "@dto": ["src/common/types/dto"],
      "@guard": ["src/common/guards"],
      "@httpDataType": ["src/common/types/httpDataTypes"],
      "@module": ["src/modules"],
      "@value": ["src/common/values"],
      "@port": ["src/modules/database/ports"],
      "@shareType": ["src/common/types/shareTypes"],
      "@shareValue": ["src/common/values"],
      "@socketType": ["src/common/types/socketTypes"],
      "@secret": ["src/common/secret"],
      "@src": ["src"],
      "@test": ["test"],
      "@testCommon": ["test/_common"],
      "@testValue": ["test/_common/testValues"],
      "@type": ["src/common/types"],
      "@util": ["src/common/utils"]
    },

    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "strictBindCallApply": false,
    "target": "ES2021"
  }
}
